{
  "name": "Radio Satelital",
  "short_name": "Satelital",
  "description": "Escucha emisoras de radio en vivo. Desarrollado por Latán Villegas.",
  "id": "/index.html",
  "start_url": "/index.html",
  "display": "standalone",
  "background_color": "#05070a",
  "theme_color": "#05070a",
  "orientation": "portrait",
  "scope": "/",
  "lang": "es",
  "dir": "ltr",
  "categories": ["music", "entertainment"],
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Play Radio",
      "short_name": "Play",
      "url": "/index.html?action=play",
      "icons": [{ "src": "icon-192.png", "sizes": "192x192", "type": "image/png" }]
    }
  ],
  "screenshots": [
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Escritorio"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Móvil"
    }
  ],
  "share_target": {
    "action": "/index.html",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": { "title": "title", "text": "text", "url": "url" }
  },
  "display_override": [
    "tabbed",
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "new_note_url": "/index.html?note=true",
  "widgets": [
    {
      "name": "Radio Widget",
      "description": "Control rápido",
      "tag": "radio",
      "template": "widget",
      "ms_ac_template": "widgets/mini.json",
      "data": "widgets/data.json",
      "type": "application/json",
      "screenshots": [{"src": "icon-512.png", "sizes": "512x512", "label": "Widget"}],
      "icons": [{"src": "icon-192.png", "sizes": "192x192"}]
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+radio",
      "url": "/index.html?station=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "scope_extensions": [
    { "origin": "https://latanvillegas.online" }
  ],
  "handle_links": "preferred",
  "file_handlers": [
    {
      "action": "/index.html",
      "accept": {
        "audio/mpeg": [".mp3"],
        "audio/x-mpegurl": [".m3u"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "prefer_related_applications": false,
  "serviceworker": {
    "src": "./sw.js",
    "scope": "/",
    "update_via_cache": "none"
  }
}
